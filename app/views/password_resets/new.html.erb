<div class="container mx-auto">
  <div class="text-center mt-6">
    <h1 class='text-2xl font-body font-lilita'><%= t('.title') %></h1>
  </div>
  <%= form_with url: password_resets_path do |f| %>

  <%= f.label :email, class: 'label w-full md:w-1/2 mx-auto' %>
  <%= f.email_field :email, class: 'input input-bordered border-2 input-accent form-control mb-6 w-full md:w-1/2 mx-auto' %>

  <div class='mx-auto md:w-1/2'>
    <%= f.submit t('.submit'), class: "btn btn-primary text-white w-full mt-6 mb-6 mx-auto" %>
  </div>
  <% end %>
</div>